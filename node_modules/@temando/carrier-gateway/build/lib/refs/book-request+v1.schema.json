{
  "id": "http://carrier-gateway.temando.com/schema/book-request+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic booking request schema",
  "type": "object",
  "required": [
    "integrationId",
    "origin",
    "destination",
    "pickupAt",
    "packages"
  ],
  "allOf": [
    { "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#" },
    { "$ref": "#/definitions/bookingRequest" }
  ],
  "definitions": {
    "bookingRequest": {
      "properties": {
        "integrationId": {
          "description": "The identifier of the integration to you want to communicate with",
          "type": "string"
        },
        "origin": { "$ref": "#/definitions/address" },
        "destination": { "$ref": "#/definitions/address" },
        "pickupAt": {
          "type": "string",
          "format": "date-time"
        },
        "packages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/package"
          }
        }
      }
    },
    "address": {
      "type": "object",
      "required": ["countryCode", "postalCode"],
      "properties": {
        "address": {
          "description": "A street address and building number, newline delimited if required",
          "type": "string",
          "minLength": 2,
          "maxLength": 100
        },
        "countryCode": {
          "description": "An ISO 3166-1 alpha-2 compliant two-letter country code",
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "postalCode": {
          "type": "string"
        },
        "locality": {
          "type": "string"
        },
        "administrativeArea": {
          "type": "string"
        }
      }
    },
    "package": {
      "type": "object",
      "required": ["grossWeight"],
      "properties": {
        "grossWeight": { "$ref": "http://carrier-gateway.temando.com/schema/generic/weight+v1#" },
        "dimensions": { "$ref": "http://carrier-gateway.temando.com/schema/generic/dimension+v1#" }
      }
    }
  }
}
