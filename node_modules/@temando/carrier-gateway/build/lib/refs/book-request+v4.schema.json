{
  "id": "http://carrier-gateway.temando.com/schema/book-request+v4#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic booking request schema",
  "type": "object",
  "required": [
    "integrationId",
    "integrationServiceId"
  ],
  "allOf": [{
    "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
  }, {
    "$ref": "http://carrier-gateway.temando.com/schema/generic/credentials+v1#"
  }, {
    "$ref": "#/definitions/bookingRequest"
  }],
  "definitions": {
    "bookingRequest": {
      "properties": {
        "integrationId": {
          "description": "The identifier of the integration to you want to communicate with",
          "type": "string"
        },
        "integrationServiceId": {
          "description": "A consistent identifier that represents a unique carrier service",
          "type": "string"
        },
        "documentation": {
          "description": "Documentation to be generated as part of the booking request.",
          "type": "array",
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/document-request+v1#"
          }
        }
      },
      "allOf": [
        {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/shipment+v1#"
        }
      ]
    }
  }
}
