{
  "id": "http://carrier-gateway.temando.com/schema/book-request+v5#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic booking request schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "integrationId",
    "createdAt",
    "shipment",
    "credentials"
  ],
  "allOf": [
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/credentials+v2#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/shipment+v2#"
    }
  ],
  "properties": {
    "id": {
      "description": "A unique identifier for this request"
    },
    "createdAt": {
      "description": "The time the client sent this request to gateway"
    },
    "integrationId": {
      "description": "The id of the integration you wish to talk to"
    },
    "credentials": {
      "description": "A carrier credentials object"
    },
    "shipment": {
      "properties": {
        "origin": {
          "type": "object",
          "oneOf": [
            {
              "required": [
                "addressLines"
              ]
            },
            {
              "required": [
                "identifier"
              ]
            }
          ]
        },
        "destination": {
          "type": "object",
          "oneOf": [
            {
              "required": [
                "addressLines"
              ]
            },
            {
              "required": [
                "identifier"
              ]
            }
          ]
        }
      }
    },
    "documentation": {
      "description": "Documentation to be generated as part of the booking request.",
      "type": "array",
      "items": {
        "$ref": "http://carrier-gateway.temando.com/schema/generic/document+v1#"
      }
    }
  }
}
