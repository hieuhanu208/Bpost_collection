{
  "id": "http://carrier-gateway.temando.com/schema/book-response+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic booking response schema",
  "type": "object",
  "required": ["integrationId", "successfulBooking", "failedBooking"],
  "properties": {
    "integrationId": {
      "description": "The identifier of the integration to you want to communicate with",
      "type": "string"
    },
    "successfulBooking": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/definitions/successfulBooking" }
    },
    "failedBooking": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/definitions/failedBooking" }
    }
  },
  "definitions": {
    "integrationId": {
      "description": "The identifier of the integration that you want to communicate with",
      "type": "string"
    },
    "successfulBooking": {
      "type": "object",
      "required": [
        "integrationServiceId", "bookingReference", "shippingTaxInclusiveCharge", "pricedAt"
      ],
      "properties": {
        "integrationServiceId": {
          "description": "A consistent identifier within the integration that represents a unique carrier service",
          "type": "string"
        },
        "bookingReference": {
          "description": "A booking reference with the carrier",
          "type": "string"
        },
        "shippingTaxInclusiveCharge": { "$ref": "http://carrier-gateway.temando.com/schema/generic/money+v1#" },
        "pricedAt": {
          "type": "string",
          "format": "date-time"
        },
        "documentation": {
          "description": "A list of links to pre-generated PDF label documents for this shipment",
          "type": "array",
          "items": { "$ref": "#/definitions/labelDocument" }
        }
      }
    },
    "failedBooking": {
      "required": ["reason"],
      "integrationServiceId": {
        "description": "A consistent identifier within the integration that represents a unique carrier service",
        "type": "string"
      },
      "reason": { "type": "string" }
    },
    "labelDocument": {
      "type": "string",
      "description": "A link to a pre-generate PDF shipping label",
      "minLength": 10
    }
  }
}
