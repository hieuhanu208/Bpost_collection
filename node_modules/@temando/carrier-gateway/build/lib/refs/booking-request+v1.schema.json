{
  "id": "http://carrier-gateway.temando.com/schema/booking-request+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic booking request schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "integrationId",
    "createdAt",
    "shipment",
    "configuration"
  ],
  "allOf": [
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/shipment+v2#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/extensible+v1#"
    }
  ],
  "properties": {
    "id": {
      "description": "A unique identifier for the schema of this request"
    },
    "configuration": {
      "required": [
        "client"
      ],
      "allOf": [
        {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/configuration+v1#"
        }
      ]
    },
    "extensions": {
      "description": "Custom extensions to this schema"
    },
    "createdAt": {
      "description": "The time the client sent this request to gateway"
    },
    "integrationId": {
      "description": "The id of the integration you wish to talk to"
    },
    "shipment": {
      "properties": {
        "origin": {
          "type": "object",
          "oneOf": [
            {
              "required": [
                "addressLines"
              ]
            },
            {
              "required": [
                "identifier"
              ]
            }
          ]
        },
        "destination": {
          "type": "object",
          "oneOf": [
            {
              "required": [
                "addressLines"
              ]
            },
            {
              "required": [
                "identifier"
              ]
            }
          ]
        }
      }
    },
    "documentation": {
      "description": "Configuration for how documentation should be generated where possible",
      "type": "array",
      "items": {
        "$ref": "http://carrier-gateway.temando.com/schema/generic/document+v1#"
      }
    }
  }
}
