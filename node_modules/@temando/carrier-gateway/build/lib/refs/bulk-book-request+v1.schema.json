{
  "id": "http://carrier-gateway.temando.com/schema/bulk-book-request+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic bulk booking request schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "integrationId",
    "createdAt",
    "credentials",
    "shipments"
  ],
  "allOf": [
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/credentials+v2"
    }
  ],
  "properties": {
    "id": {
      "description": "A unique identifier for this request"
    },
    "integrationId": {
      "description": "A consistent identifier for a particular integration"
    },
    "createdAt": {
      "description": "The time the request was sent by the client"
    },
    "credentials": {
      "description": "The carrier credentials object"
    },
    "shipments": {
      "description": "An array of shipments to transmit to the carrier",
      "type": "array",
      "minItems": 1,
      "items": {
        "allOf": [
          {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/shipment+v2#"
          }
        ],
        "properties": {
          "origin": {
            "type": "object",
            "required": [
              "addressLines"
            ]
          },
          "destination": {
            "type": "object",
            "required": [
              "addressLines"
            ]
          }
        }
      }
    },
    "documentation": {
      "description": "Documentation to be generated as part of the booking request.",
      "type": "array",
      "items": {
        "$ref": "http://carrier-gateway.temando.com/schema/generic/document+v1#"
      }
    }
  }
}
