{
  "id": "http://carrier-gateway.temando.com/schema/cancel-response+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic cancel booking response schema",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/cancelResponse"
    }
  ],
  "definitions": {
    "cancelResponse": {
      "required": [
        "integrationId"
      ],
      "properties": {
        "integrationId": {
          "description": "The identifier of the integration to you want to communicate with",
          "type": "string"
        }
      },
      "oneOf": [
        {
          "$ref": "#/definitions/failedCancellation"
        },
        {
          "$ref": "#/definitions/successfulCancellation"
        }
      ]
    },
    "successfulCancellation": {
      "required": [
        "successfulCancellation"
      ],
      "properties": {
        "successfulCancellation": {
          "required": [
            "cancelledAt"
          ],
          "properties": {
            "integrationServiceId": {
              "description": "A consistent identifier within the integration that represents a unique carrier service",
              "type": "string"
            },
            "cancelledAt": {
              "description": "The date and time the booking was canceled on",
              "type": "string",
              "format": "date-time"
            }
          },
          "allOf": [
            {
              "$ref": "http://carrier-gateway.temando.com/schema/generic/booking+v1#"
            }
          ]
        }
      }
    },
    "failedCancellation": {
      "required": [
        "failedCancellation"
      ],
      "properties": {
        "failedCancellation": {
          "type": "object",
          "required": [
            "reasons"
          ],
          "properties": {
            "reasons": {
              "description": "An array of reasons for the failure to cancel the booking",
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          }
        }
      }
    }
  }
}
