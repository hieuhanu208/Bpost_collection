{
  "id": "http://carrier-gateway.temando.com/schema/documentation-request+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic documentation request schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "documentation",
    "booking"
  ],
  "allOf": [
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/credentials+v2"
    }
  ],
  "properties": {
    "id": {
      "description": "A unique identifier for the schema of this request"
    },
    "integrationId": {
      "description": "The id of the integration you wish to talk to"
    },
    "createdAt": {
      "description": "The time the client sent this request to gateway"
    },
    "credentials": {
      "description": "Carrier credentials to make the request with"
    },
    "documentation": {
      "description": "A list of documentation to be generated as part of the booking request",
      "type": "array",
      "items": {
        "$ref": "http://carrier-gateway.temando.com/schema/generic/document+v1#"
      }
    },
    "booking": {
      "description": "One or many bookings to generate documentation for",
      "oneOf": [
        {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/booking+v2#"
        },
        {
          "type": "array",
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/booking+v2#"
          }
        }
      ]
    }
  }
}
