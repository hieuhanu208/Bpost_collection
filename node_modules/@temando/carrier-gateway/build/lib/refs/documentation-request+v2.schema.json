{
  "id": "http://carrier-gateway.temando.com/schema/documentation-request+v2#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic documentation request schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "documentation",
    "bookings",
    "configuration"
  ],
  "allOf": [
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/extensible+v1#"
    }
  ],
  "properties": {
    "configuration": {
      "required": [
        "client"
      ],
      "allOf": [
        {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/configuration+v1#"
        }
      ]
    },
    "id": {
      "description": "A unique identifier for the schema of this request"
    },
    "integrationId": {
      "description": "The id of the integration you wish to talk to"
    },
    "createdAt": {
      "description": "The time the client sent this request to gateway"
    },
    "extensions": {
      "description": "Custom extensions to this schema"
    },
    "documentation": {
      "description": "A list of documentation to be generated as part of this request",
      "type": "array",
      "items": {
        "$ref": "http://carrier-gateway.temando.com/schema/generic/document+v1#"
      }
    },
    "bookings": {
      "description": "An array of booking documents or urls pointing to them",
      "oneOf": [
        {
          "type": "array",
          "items": [
            {
              "description": "An array of booking document urls that are able to be fetched for processing",
              "type": "string",
              "format": "uri"
            }
          ],
          "minLength": 1
        },
        {
          "type": "array",
          "items": [
            {
              "$ref": "http://carrier-gateway.temando.com/schema/generic/booking+v2#"
            }
          ],
          "minLength": 1
        }
      ]
    }
  }
}
