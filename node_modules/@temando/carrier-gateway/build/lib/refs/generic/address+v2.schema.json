{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/address+v2#",
  "description": "This is the schema for representing addresses",
  "type": "object",
  "properties": {
    "companyName": {
      "type": "string"
    },
    "address": {
      "description": "A street address and building number, newline delimited if required",
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "countryCode": {
      "description": "An ISO 3166-1 alpha-2 compliant two-letter country code",
      "type": "string",
      "minLength": 2,
      "maxLength": 2
    },
    "postalCode": {
      "type": "string"
    },
    "locality": {
      "type": "string",
      "description": "The city or township of this address"
    },
    "administrativeArea": {
      "type": "string",
      "description": "The administrative area of this address ie: state"
    },
    "administrativeAreaCode": {
      "type": "string",
      "description": "The administrative area code for this address ie: QLD"
    },
    "contact": {
      "$ref": "#/definitions/contactDetails"
    }
  },
  "definitions": {
    "contactDetails": {
      "type": "object",
      "properties": {
        "personName": {
          "type": "string",
          "minLength": 2,
          "maxLength": 35
        },
        "emailAddress": {
          "type": "string",
          "format": "email"
        },
        "phoneNumber": {
          "type": "string",
          "minLength": 2,
          "maxLength": 25
        },
        "phoneExtension": {
          "type": "string",
          "minLength": 0,
          "maxLength": 5
        },
        "faxNumber": {
          "type": "string",
          "minLength": 0,
          "maxLength": 25
        },
        "telex": {
          "type": "string",
          "minLength": 0,
          "maxLength": 25
        },
        "mobilePhoneNumber": {
          "type": "string",
          "minLength": 0,
          "maxLength": 25
        }
      }
    }
  }
}
