{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/address+v4#",
  "description": "This is the schema for representing addresses",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "countryCode"
  ],
  "properties": {
    "addressType": {
      "type": "string",
      "description": "The type of location",
      "enum": [
        "business",
        "residence",
        "other"
      ]
    },
    "addressLines": {
      "description": "An array representing address lines",
      "type": "array",
      "items": [{
        "description": "An address line",
        "type": "string",
        "minLength": 1
      }]
    },
    "countryCode": {
      "description": "An ISO 3166-1 alpha-2 compliant two-letter country code",
      "allOf": [
        {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/country+v1#"
        }
      ]
    },
    "postalCode": {
      "type": "string"
    },
    "inseeCode": {
      "type": "string"
    },
    "housingType": {
      "type": "string"
    },
    "liftAvailable": {
      "type": "boolean"
    },
    "apartmentNumber": {
      "description": "apartmentNumber",
      "type": "string"
    },
    "entryCode": {
      "description": "entryCode",
      "type": "string"
    },
    "buildingName": {
      "type": "string"
    },
    "buildingNumber": {
      "type": "string"
    },
    "floorNumber": {
      "type": "string"
    },
    "languageCode": {
      "type": "string"
    },
    "locality": {
      "type": "string",
      "description": "The city or township of this address"
    },
    "dependentLocality": {
      "type": "string"
    },
    "administrativeArea": {
      "type": "string",
      "description": "The administrative area of this address ie: state"
    },
    "contact": {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/entity+v1#",
      "type": "object",
      "required": [
        "phone"
      ],
      "anyOf": [
        {
          "required": [
            "person"
          ]
        },
        {
          "required": [
            "organisation"
          ]
        }
      ],
      "properties": {
        "person": {
          "type": "object",
          "required": [
            "first",
            "last"
          ]
        }
      }
    },
    "tin": {
      "description": "A tax identification number",
      "type": "string",
      "minLength": 1
    }
  }
}
