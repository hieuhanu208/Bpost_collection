{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/booking+v1#",
  "description": "This is the schema for representing a booking",
  "type": "object",
  "allOf": [{
    "$ref": "#/definitions/booking"
  }],
  "definitions": {
    "booking": {
      "type": "object",
      "properties": {
        "integrationServiceId": {
          "$ref": "#/definitions/integrationServiceId"
        },
        "serviceName": {
          "$ref": "#/definitions/serviceName"
        },
        "carrierName": {
          "$ref": "#/definitions/carrierName"
        },
        "carrierSortCode": {
          "$ref": "#/definitions/carrierSortCode"
        },
        "bookingReference": {
          "type": "string"
        },
        "trackingReference": {
          "type": "string"
        },
        "shippingTaxInclusiveCharge": {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/money+v1#"
        },
        "bookedAt": {
          "type": "string",
          "format": "date-time"
        },
        "documentation": {
          "description": "Documentation that has been generated as part of the booking request.",
          "type": "array",
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/document-response+v1#"
          }
        },
        "packages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/package"
          }
        },
        "shipment": {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/shipment+v1#"
        }
      },
      "required": [
        "bookingReference"
      ]
    },
    "package": {
      "type": "object",
      "allOf": [{
        "$ref": "http://carrier-gateway.temando.com/schema/generic/package+v2#"
      }],
      "properties": {
        "documentation": {
          "description": "Documentation that has been generated as part of the booking request.",
          "type": "array",
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/document-response+v1#"
          }
        },
        "trackingReference": {
          "type": "string",
          "minLength": 2,
          "description": "A unique tracking number assigned to this package"
        }
      }
    },
    "integrationServiceId": {
      "description": "A consistent identifier within the integration that represents a unique carrier service",
      "type": "string"
    },
    "serviceName": {
      "description": "A human understandable reference that represents a carrier service",
      "type": "string"
    },
    "carrierName": {
      "description": "A human understandable reference that represents a carrier",
      "type": "string"
    },
    "carrierSortCode": {
      "description": "An identifier used by a carrier to determinine shipment sorting",
      "type": "string"
    },
    "paperless": {
      "description": "Identifies if the booking was a paperless booking.",
      "type": "boolean"
    }
  }
}
