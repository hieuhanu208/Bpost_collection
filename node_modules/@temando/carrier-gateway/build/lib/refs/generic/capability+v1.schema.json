{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/capability+v1#",
  "description": "This is the schema for an representing carrier capability",
  "type": "object",
  "properties": {
    "authorityToLeave": {
      "$ref": "#/definitions/authorityToLeave"
    },
    "signature": {
      "$ref": "#/definitions/signatureOnDelivery"
    },
    "cashOnDelivery": {
      "$ref": "#/definitions/cashOnDelivery"
    },
    "homeCollection": {
      "$ref": "#/definitions/homeCollection"
    },
    "return": {
      "$ref": "#/definitions/return"
    },
    "paperlessTrade": {
      "$ref": "#/definitions/paperlessTrade"
    },
    "homeDelivery": {
      "$ref": "#/definitions/homeDelivery"
    },
    "deliveryTimeFrame": {
      "$ref": "#/definitions/deliveryTimeFrame"
    }
  },
  "definitions": {
    "authorityToLeave": {
      "additionalProperties": false,
      "type": "boolean"
    },
    "signatureOnDelivery": {
      "type": "object",
      "required": [
        "required",
        "onlyAdultCanSign"
      ],
      "additionalProperties": false,
      "properties": {
        "required": {
          "type": "boolean"
        },
        "onlyAdultCanSign": {
          "type": "boolean"
        },
        "onlyAddresseeCanSign": {
          "type": "boolean"
        }
      }
    },
    "paperlessTrade": {
      "additionalProperties": false,
      "type": "boolean"
    },
    "cashOnDelivery": {
      "type": "object",
      "required": [
        "amount",
        "currency",
        "shippingInclusive"
      ],
      "properties": {
        "shippingInclusive": {
          "description": "Identifies if the cash on delivery includes the shipping cost",
          "type": "boolean"
        },
        "bban": {
          "description": "Bank account number",
          "type": "string"
        }
      }
    },
    "homeCollection": {
      "type": "object",
      "required": [
        "type"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "description": "The type of home collection"
        }
      }
    },
    "return": {
      "type": "object",
      "required": [
        "returnerPaysCost"
      ],
      "additionalProperties": false,
      "properties": {
        "returnerPaysCost": {
          "type": "boolean"
        },
        "serviceId": {
          "description": "A carrier specific identifier for the return service",
          "type": "string",
          "minLength": 1
        }
      }
    },
    "homeDelivery": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "deliveryTimeFrame": {
      "type": "object",
      "properties": {
        "bookingNumber": {
          "type": "string"
        },
        "roundNumber": {
          "type": "string"
        },
        "deliveryDate": {
          "type": "string"
        }
      }
    }
  }
}
