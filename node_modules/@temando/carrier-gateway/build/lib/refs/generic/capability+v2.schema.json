{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/capability+v2#",
  "description": "A schema for representing carrier service capabilities and options",
  "type": "object",
  "properties": {
    "authorityToLeave": {
      "$ref": "#/definitions/authorityToLeave"
    },
    "signature": {
      "$ref": "#/definitions/signatureOnDelivery"
    },
    "cashOnDelivery": {
      "$ref": "#/definitions/cashOnDelivery"
    },
    "homeCollection": {
      "$ref": "#/definitions/homeCollection"
    },
    "return": {
      "$ref": "#/definitions/return"
    },
    "paperlessTrade": {
      "$ref": "#/definitions/paperlessTrade"
    },
    "homeDelivery": {
      "$ref": "#/definitions/homeDelivery"
    },
    "deliveryTimeFrame": {
      "$ref": "#/definitions/deliveryTimeFrame"
    },
    "dropOff": {
      "description": "The permitted delivery places which driver can choose to drop the shipment off",
      "type": "string",
      "enum": [
        "porch",
        "shed",
        "garage",
        "greenhouse",
        "conservatory",
        "driversChoice"
      ]
    }
  },
  "definitions": {
    "authorityToLeave": {
      "additionalProperties": false,
      "type": "boolean"
    },
    "signatureOnDelivery": {
      "type": "object",
      "required": [
        "required",
        "onlyAdultCanSign"
      ],
      "additionalProperties": false,
      "properties": {
        "required": {
          "type": "boolean"
        },
        "onlyAdultCanSign": {
          "type": "boolean"
        },
        "onlyAddresseeCanSign": {
          "type": "boolean"
        }
      }
    },
    "paperlessTrade": {
      "type": "object",
      "oneOf": [{
        "required": ["documentIds"]
      }, {
        "required": ["documentation"]
      }],
      "properties": {
        "documentIds": {
          "description": "The identifiers of the previously uploaded documents you wish to associate with this booking",
          "type": "array",
          "items": [{
            "type": "string",
            "minLength": 1
          }]
        },
        "documentation": {
          "description": "Documentation to be generated as part of the booking request.",
          "type": "array",
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/document+v1#"
          }
        }
      }
    },
    "cashOnDelivery": {
      "type": "object",
      "required": [
        "shippingInclusive"
      ],
      "properties": {
        "charge": {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/money+v1#"
        },
        "shippingInclusive": {
          "description": "Identifies if the cash on delivery includes the shipping cost",
          "type": "boolean"
        },
        "bban": {
          "description": "Bank account number",
          "type": "string"
        }
      }
    },
    "homeCollection": {
      "additionalProperties": false,
      "type": "boolean"
    },
    "return": {
      "type": "object",
      "required": [
        "returnerPaysCost"
      ],
      "additionalProperties": false,
      "properties": {
        "returnerPaysCost": {
          "type": "boolean"
        },
        "serviceId": {
          "description": "A carrier specific identifier for the return service",
          "type": "string",
          "minLength": 1
        }
      }
    },
    "homeDelivery": {
      "additionalProperties": false,
      "type": "boolean"
    },
    "deliveryTimeFrame": {
      "type": "object",
      "properties": {
        "bookingNumber": {
          "type": "string"
        },
        "roundNumber": {
          "type": "string"
        },
        "deliveryDate": {
          "type": "string"
        }
      }
    }
  }
}
