{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/completion+v1#",
  "description": "This is the schema for representing a completed booking",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/completion"
    }
  ],
  "definitions": {
    "completion": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "bookings",
        "dispatch"
      ],
      "properties": {
        "dispatch": {
          "description": "Information relating to the physical dispatch of a transport to an origin location",
          "type": "object",
          "required": [
            "origin",
            "readyDateTime",
            "closeDateTime"
          ],
          "properties": {
            "origin": {
              "description": "The origin location that the transport is being sent to for these bookings",
              "oneOf": [
                {
                  "$ref": "http://carrier-gateway.temando.com/schema/generic/address+v4#"
                },
                {
                  "$ref": "http://carrier-gateway.temando.com/schema/generic/collection-point+v2#"
                }
              ]
            },
            "readyDateTime": {
              "type": "string",
              "format": "date-time",
              "description": "The date and time from which the dispatch window is open"
            },
            "closeDateTime": {
              "type": "string",
              "format": "date-time",
              "description": "The date and time the dispatch window closes"
            }
          }
        },
        "bookings": {
          "description": "The booking documents associated with this completion",
          "type": "array",
          "items": [{
            "$ref": "http://carrier-gateway.temando.com/schema/generic/booking+v2#"
          }]
        },
        "manifestReference": {
          "description": "A manifest reference associated with this booking if any",
          "type": "string",
          "minLength": 1
        },
        "pickupReference": {
          "description": "A pickup reference associated with this booking if any",
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
