{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/dimension+v1#",
  "description": "This is the schema for representing dimensions",
  "type": "object",
  "additionalProperties": false,
  "required": ["length", "width", "height", "unit"],
  "properties": {
    "length": {
      "type": "number",
      "minimum": 0
    },
    "width": {
      "type": "number",
      "minimum": 0
    },
    "height": {
      "type": "number",
      "minimum": 0
    },
    "unit": {
      "description": "The length unit the dimension's lengths are in",
      "type": "string",
      "enum": [
        "mm", "millimeter", "millimetre",
        "cm", "centimeter", "centimetre",
        "m", "meter", "metre",
        "ft", "foot", "feet",
        "in", "inch",
        "yd", "yard"
      ]
    }
  }
}
