{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/document+v1#",
  "description": "This is the schema for representing a document",
  "additionalProperties": false,
  "required": [
    "size",
    "type",
    "mimeType"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "ID of the entity to which this document relates, e.g. package ID for per-package documents"
    },
    "size": {
      "description": "An ISO 216 document size",
      "type": "string",
      "enum": [
        "A0",
        "A1",
        "A2",
        "A3",
        "A4",
        "A5",
        "A6",
        "A7",
        "A8",
        "A9",
        "A10"
      ]
    },
    "type": {
      "description": "The document type being generated",
      "type": "string",
      "enum": [
        "NAFTA",
        "certificateOfOrigin",
        "cn22",
        "cn23",
        "codTurnInPage",
        "commercialInvoice",
        "customerInvoice",
        "manifestSummary",
        "packageLabels",
        "packageReturnLabels",
        "packagingList",
        "proofOfDelivery"
      ]
    },
    "mimeType": {
      "description": "A collection of document specific mime types",
      "type": "string",
      "$ref": "http://carrier-gateway.temando.com/schema/generic/mime-type+v1#",
      "enum": [
        "application/epl",
        "application/epl2",
        "application/zpl",
        "application/pdf",
        "image/png",
        "image/jpg",
        "image/gif",
        "image/bmp",
        "text/html",
        "text/plain"
      ]
    },
    "encoding": {
      "description": "The encoding of the document data",
      "type": "string",
      "enum": [
        "base64",
        "plainText"
      ]
    },
    "data": {
      "description": "The document data as a string",
      "type": "string",
      "minLength": 1
    },
    "url": {
      "description": "The URL of a document stored on a remote HTTP server",
      "type": "string",
      "format": "uri"
    },
    "trackingReference": {
      "description": "The tracking reference of the entity that the documentation refers to",
      "type": "string",
      "minLength": 1
    },
    "bookingReference": {
      "description": "The booking reference of the entity that the documentation refers to",
      "type": "string",
      "minLength": 1
    },
    "description": {
      "description": "An optional description to assign to the document",
      "type": "string",
      "minLength": 1
    }
  }
}
