{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/length+v1#",
  "description": "This is the schema for an representing length",
  "type": "object",
  "additionalProperties": false,
  "required": ["amount", "unit"],
  "properties": {
    "amount": {
      "description": "The amount of the length unit",
      "type": "number",
      "minimum": 0
    },
    "unit": {
      "description": "The length unit the amount is",
      "type": "string",
      "enum": [
        "mm", "millimeter", "millimetre",
        "cm", "centimeter", "centimetre",
        "m", "meter", "metre",
        "ft", "foot", "feet",
        "in", "inch",
        "yd", "yard"
      ]
    }
  }
}
