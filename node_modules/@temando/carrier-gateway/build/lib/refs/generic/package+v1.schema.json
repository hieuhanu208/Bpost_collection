{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/package+v1#",
  "description": "This is the schema for representing packages",
  "type": "object",
  "required": ["grossWeight", "dimensions"],
  "properties": {
    "id": {
      "type": "string",
      "description": "A reference identifier for the package"
    },
    "grossWeight": {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/weight+v1#"
    },
    "dimensions": {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/dimension+v1#"
    },
    "monetaryValue": {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/money+v1#"
    },
    "description": {
      "description": "Description contents in package",
      "type": "string"
    },
    "packageType": {
      "description": "Carrier specific package type",
      "type": "string"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/packageItems"
      }
    }
  },
  "definitions": {
    "packageItems": {
      "type": "object",
      "required": ["quantity", "quantityUnit", "description"],
      "properties": {
        "quantity": {
          "type": "number",
          "description": "Number of items in package"
        },
        "quantityUnit": {
          "type": "string",
          "description": "Unit of quantity (ie. kg, each, boxes etc)"
        },
        "monetaryValue": {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/money+v1#"
        },
        "description": {
          "description": "Description of item for export details",
          "type": "string"
        },
        "scheduleBinfo": {
          "type": "string",
          "description": "Schedule B Export Code for Package",
          "minLength": 0,
          "maxLength": 15
        },
        "eccn": {
          "type": "string",
          "description": "Export Control Classification Number (ECCN)",
          "minLength": 0,
          "maxLength": 5
        },
        "grossWeight": {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/weight+v1#"
        }
      }
    }
  }
}
