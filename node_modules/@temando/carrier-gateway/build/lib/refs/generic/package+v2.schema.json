{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/package+v2#",
  "description": "This is the schema for representing packages",
  "type": "object",
  "required": [ "id", "grossWeight", "dimensions" ],
  "properties": {
    "id": {
      "type": "string",
      "description": "A reference identifier for the package"
    },
    "grossWeight": {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/weight+v1#"
    },
    "dimensions": {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/dimension+v1#"
    },
    "packageType": {
      "description": "Carrier specific package type",
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "http://carrier-gateway.temando.com/schema/generic/item+v1#"
      }
    }
  }
}
