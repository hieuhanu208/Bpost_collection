{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://carrier-gateway.temando.com/schema/generic/shipment+v1#",
  "description": "This is the schema for representing a shipment",
  "type": "object",
  "allOf": [{
    "$ref": "#/definitions/shipment"
  }],
  "definitions": {
    "shipment": {
      "type": "object",
      "properties": {
        "integrationServiceId": {
          "description": "A consistent identifier that represents a unique carrier service",
          "type": "string"
        },
        "customerReference": {
          "description": "A consistent identifier that represents a clients customer",
          "type": "string"
        },
        "merchantReference": {
          "type": "string",
          "description": "merchant reference"
        },
        "pickupAt": {
          "type": "string",
          "format": "date-time"
        },
        "expectedAt": {
          "type": "string",
          "format": "date-time"
        },
        "origin": {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/address+v3#"
        },
        "destination": {
          "oneOf": [{
            "$ref": "http://carrier-gateway.temando.com/schema/generic/address+v3#"
          }, {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/collection-point+v1#"
          }]
        },
        "packages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/package+v2#"
          }
        },
        "exportDeclaration": {
          "$ref": "#/definitions/exportDeclaration"
        },
        "insuredAmount": {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/money+v1#"
        },
        "instructionsToDeliveryAgent": {
          "type": "string"
        },
        "requiredCapabilities": {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/capability+v1#"
        },
        "relatedBookingReferenceNumber": {
          "type": "string"
        },
        "descriptionOfGoods": {
          "type": "string"
        }
      },
      "required": [
        "origin",
        "destination",
        "packages"
      ]
    },
    "exportDeclaration": {
      "type": "object",
      "properties": {
        "signatureName": {
          "description": "Name of signatory",
          "type": "string"
        },
        "signatureTitle": {
          "description": "Title of signatory",
          "type": "string"
        },
        "exportReason": {
          "description": "A human readable description of the reason for the exportation",
          "type": "string"
        },
        "declaredValue": {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/money+v1#"
        },
        "incoterm": {
          "description": "Incoterm 2010 rules, series of pre-defined commercial terms.",
          "enum": [
            "EXW",
            "FCA",
            "FAS",
            "FOB",
            "CPT",
            "CFR",
            "CIF",
            "CIP",
            "DAT",
            "DAP",
            "DDP"
          ]
        }
      }
    }
  }
}
