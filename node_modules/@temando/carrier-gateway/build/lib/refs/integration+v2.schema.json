{
  "id": "http://carrier-gateway.temando.com/schema/integration+v2#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "An integration, the methods and services it supports",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "methods",
    "services"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "description": "A consistent identifier of an integration",
      "type": "string",
      "minLength": 1
    },
    "name": {
      "description": "A human identifiable name for this integration",
      "type": "string",
      "minLength": 1
    },
    "description": {
      "description": "A short description of an integration",
      "type": "string",
      "minLength": 1
    },
    "methods": {
      "description": "A list of methods an integration supports",
      "type": "object",
      "required": [
        "quote",
        "booking",
        "bulkBooking",
        "bulkQuote",
        "tracking",
        "documentation",
        "meta"
      ],
      "additionalProperties": {
        "$ref": "#/definitions/supportedActions"
      },
      "properties": {
        "quote": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "booking": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "bulkBooking": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "bulkQuote": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "tracking": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "pickup": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "documentation": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "meta": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        }
      }
    },
    "services": {
      "description": "A list of delivery services an integration supports, their capabilities and their scope",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "capabilities",
          "routes"
        ],
        "properties": {
          "id": {
            "description": "The identifier to use for a specific service",
            "type": "string",
            "minLength": 1
          },
          "name": {
            "description": "The human understandable identifier of a service",
            "type": "string",
            "minLength": 1
          },
          "capabilities": {
            "description": "A list of the capabilities a service supports",
            "type": "object",
            "required": [
              "authorityToLeave",
              "signature",
              "cashOnDelivery",
              "homeCollection",
              "return",
              "paperlessTrade",
              "homeDelivery",
              "deliveryTimeFrame"
            ],
            "additionalProperties": false,
            "properties": {
              "authorityToLeave": {
                "$ref": "#/definitions/supportedCapability"
              },
              "signature": {
                "$ref": "#/definitions/supportedCapability"
              },
              "cashOnDelivery": {
                "$ref": "#/definitions/supportedCapability"
              },
              "homeCollection": {
                "$ref": "#/definitions/supportedCapability"
              },
              "return": {
                "$ref": "#/definitions/supportedCapability"
              },
              "paperlessTrade": {
                "$ref": "#/definitions/supportedCapability"
              },
              "homeDelivery": {
                "$ref": "#/definitions/supportedCapability"
              },
              "deliveryTimeFrame": {
                "$ref": "#/definitions/supportedCapability"
              }
            }
          },
          "routes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "origin",
                "destination"
              ],
              "additionalProperties": false,
              "properties": {
                "origin": {
                  "description": "An origin that a service supports",
                  "$ref": "http://carrier-gateway.temando.com/schema/generic/country+v1#"
                },
                "destination": {
                  "description": "An object with arrays of destinations an origin supports or not for a particular service",
                  "type": "object",
                  "additionalProperties": false,
                  "required": [
                    "include",
                    "exclude"
                  ],
                  "properties": {
                    "include": {
                      "$ref": "#/definitions/countriesList"
                    },
                    "exclude": {
                      "$ref": "#/definitions/countriesList"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "countriesList": {
      "description": "An array that indicates which countries are either supported or not",
      "type": "array",
      "items":  [{
        "$ref": "http://carrier-gateway.temando.com/schema/generic/country+v1#"
      }]
    },
    "supportedCapability": {
      "description": "A boolean that indicates whether a service supports a particular capability",
      "type": "boolean"
    },
    "supportedActions": {
      "description": "The HTTP actions a particular method can support",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "POST": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        },
        "GET": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        },
        "DELETE": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        },
        "PATCH": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        },
        "PUT": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "contract": {
      "description": "The request and response schemas a method is bound to",
      "type": "object",
      "required": [
        "requestSchemas",
        "responseSchemas"
      ],
      "additionalProperties": false,
      "properties": {
        "requestSchemas": {
          "description": "The request format of a method",
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "responseSchemas": {
          "description": "The response format of a method",
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        }
      }
    }
  }
}
