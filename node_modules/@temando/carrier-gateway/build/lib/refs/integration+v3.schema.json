{
  "id": "http://carrier-gateway.temando.com/schema/integration+v3#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "An integration, the methods and services it supports",
  "type": "object",
  "required": [
    "id",
    "integrationId",
    "name",
    "brand",
    "description",
    "methods",
    "services"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "description": "A unique identifier for this objects schema"
    },
    "integrationId": {
      "description": "A consistent identifier of the integration",
      "type": "string",
      "minLength": 1
    },
    "status": {
      "description": "An indicator to show if a carrier is available (ready for production), unavailable (restricted, offline, etc), or upcoming (under development)",
      "type": "string",
      "enum": [
        "available",
        "unavailable",
        "upcoming"
      ]
    },
    "brand": {
      "description": "The human identifiable brand of the carrier",
      "type": "object",
      "required": [
        "name",
        "description",
        "logo"
      ],
      "properties": {
        "name": {
          "description": "The commonly understood brand name of the carrier",
          "type": "string",
          "minLength": 1
        },
        "description": {
          "description": "A human friendly description of the carrier brand",
          "type": "string",
          "minLength": 1
        },
        "logo": {
          "description": "A logo to identify the carrier with",
          "type": "object",
          "properties": {
            "mimeType": {
              "$ref": "http://carrier-gateway.temando.com/schema/generic/mime-type+v1#"
            },
            "height": {
              "description": "image height in pixels",
              "type": "integer",
              "maximum": 500
            },
            "width": {
              "description": "image height in pixels",
              "type": "integer",
              "maximum": 500
            },
            "encoding": {
              "description": "The encoding of the document data",
              "type": "string",
              "enum": [
                "base64",
                "plainText"
              ]
            },
            "data": {
              "description": "The document data as a string",
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "name": {
      "description": "A human identifiable name for this integration",
      "type": "string",
      "minLength": 1
    },
    "description": {
      "description": "A short technical description of the integration",
      "type": "string",
      "minLength": 1
    },
    "configuration": {
      "oneOf": [
        {
          "description": "An integration specific schema describing its configuration and credentials format",
          "type": "object"
        },
        {
          "type": "null"
        }
      ]
    },
    "methods": {
      "description": "A list of methods an integration supports",
      "type": "object",
      "required": [
        "booking",
        "documentation",
        "meta",
        "completion",
        "quote",
        "registration",
        "tracking"
      ],
      "additionalProperties": {
        "$ref": "#/definitions/supportedActions"
      },
      "properties": {
        "quote": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "booking": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "tracking": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "completion": {
          "oneOf":[{
            "allOf": [{"$ref": "#/definitions/supportedActions"}],
            "properties": {
              "process": {
                "description": "The steps which will be executed to complete the booking[s] with the carrier. This is a best estimate of the process, more details will be provided after completion.",
                "$ref": "http://carrier-gateway.temando.com/schema/generic/completion-process+v1#"
              }
            }
          }, {
            "type": "null"
          }]
        },
        "completionDocumentation": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "documentation": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "meta": {
          "oneOf":[{
            "$ref": "#/definitions/supportedActions"
          }, {
            "type": "null"
          }]
        },
        "registration": {
          "oneOf":[{
            "description": "A list of endpoints required to complete carrier registration in a sequential order",
            "type": "object",
            "additionalProperties": {
              "$ref": "#/definitions/supportedActions"
            }
          }, {
            "type": "null"
          }]
        },
        "collectionPoint": {
          "oneOf": [
            {
              "allOf": [
                {
                  "$ref": "#/definitions/supportedActions"
                },
                {
                  "type": "object",
                  "additionalProperties": true,
                  "properties": {
                    "schedule": {
                      "description": "Cron syntax to describe the availability of bulk collection-point data. E.g. 02:00 UTC daily is represented as `0 2 * * *`.  Integrations will not provide this if bulk data is not available.",
                      "type": "string",
                      "examples": [
                        {
                          "meaning": "02:00 UTC daily",
                          "value": "0 2 * * *"
                        }
                      ]
                    }
                  }
                }
              ]
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "services": {
      "description": "A list of delivery services an integration supports, their capabilities and their scope",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "capabilities",
          "routes"
        ],
        "properties": {
          "id": {
            "description": "The identifier to use for a specific service",
            "type": "string",
            "minLength": 1
          },
          "name": {
            "description": "The human understandable identifier of a service",
            "type": "string",
            "minLength": 1
          },
          "capabilities": {
            "description": "A list of the capabilities a service supports",
            "type": "object",
            "required": [
              "authorityToLeave",
              "signature",
              "cashOnDelivery",
              "homeCollection",
              "return",
              "paperlessTrade",
              "homeDelivery",
              "deliveryTimeFrame"
            ],
            "additionalProperties": false,
            "properties": {
              "authorityToLeave": {
                "$ref": "#/definitions/supportedCapability"
              },
              "signature": {
                "$ref": "#/definitions/supportedCapability"
              },
              "cashOnDelivery": {
                "$ref": "#/definitions/supportedCapability"
              },
              "homeCollection": {
                "$ref": "#/definitions/supportedCapability"
              },
              "return": {
                "$ref": "#/definitions/supportedCapability"
              },
              "paperlessTrade": {
                "$ref": "#/definitions/supportedCapability"
              },
              "homeDelivery": {
                "$ref": "#/definitions/supportedCapability"
              },
              "deliveryTimeFrame": {
                "$ref": "#/definitions/supportedCapability"
              }
            }
          },
          "routes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "origin",
                "destination"
              ],
              "additionalProperties": false,
              "properties": {
                "origin": {
                  "description": "Origin countries the service supports",
                  "$ref": "#/definitions/routeMap"
                },
                "destination": {
                  "description": "Destination countries the service supports",
                  "$ref": "#/definitions/routeMap"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "routeMap": {
      "description": "An object indicating which routes are supported by a service.",
      "type": "object",
      "additionalProperties": false,
      "oneOf": [
        {
          "required": ["include"]
        },
        {
          "required": ["exclude"]
        }
      ],
      "properties": {
        "include": {
          "$ref": "#/definitions/countriesList"
        },
        "exclude": {
          "$ref": "#/definitions/countriesList"
        }
      }
    },
    "countriesList": {
      "description": "An array that indicates which countries are either supported or not",
      "type": "array",
      "items":  [{
        "$ref": "http://carrier-gateway.temando.com/schema/generic/country+v1#"
      }]
    },
    "supportedCapability": {
      "description": "A boolean that indicates whether a service supports a particular capability",
      "type": "boolean"
    },
    "supportedActions": {
      "description": "The HTTP actions a particular method can support",
      "type": "object",
      "additionalProperties": true,
      "required": ["path"],
      "properties": {
        "path": {
          "description": "The url path this method is bound to on the integration",
          "type": "string"
        },
        "POST": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        },
        "GET": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        },
        "DELETE": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        },
        "PATCH": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        },
        "PUT": {
          "oneOf": [
            {
              "$ref": "#/definitions/contract"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "contract": {
      "description": "The request and response schemas an endpoint is bound to",
      "type": "object",
      "required": [
        "requestSchemas",
        "responseSchemas"
      ],
      "additionalProperties": false,
      "properties": {
        "limit": {
          "description": "The maximum number of bookings that can be completed via this endpoint in per request",
          "type": "integer",
          "minimum": 1
        },
        "requestSchemas": {
          "description": "The request format of a method",
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": [{
                "description": "An embedded schema object",
                "type": "object"
              }]
            },
            {
              "type": "null"
            }
          ]
        },
        "responseSchemas": {
          "description": "The response format of a method",
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": [{
                "description": "An embedded schema object",
                "type": "object"
              }]
            },
            {
              "type": "null"
            }
          ]
        }
      }
    }
  }
}
