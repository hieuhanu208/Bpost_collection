{
  "id": "http://carrier-gateway.temando.com/schema/manifest-request+v2#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic manifest request schema",
  "type": "object",
  "required": [
    "integrationId",
    "manifestShipments"
  ],
  "allOf": [
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
    },
    {
      "$ref": "#/definitions/manifestRequest"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/credentials+v1"
    }
  ],
  "definitions": {
    "manifestRequest": {
      "properties": {
        "integrationId": {
          "description": "The identifier of the integration to you want to communicate with",
          "type": "string"
        },
        "manifestShipments": {
          "description": "An array of shipments to transmit to the carrier",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/booking+v1#"
          }
        },
        "documentation": {
          "description": "Documentation to be generated as part of the manifest request",
          "type": "array",
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/document-request+v1#"
          }
        }
      }
    }
  }
}
