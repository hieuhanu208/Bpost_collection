{
  "id": "http://carrier-gateway.temando.com/schema/manifest-response+v2#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic manifest response schema",
  "type": "object",
  "required": [
    "integrationId",
    "successfulManifests",
    "failedManifests"
  ],
  "properties": {
    "integrationId": {
      "description": "The identifier of the integration to you want to communicate with",
      "type": "string"
    },
    "successfulManifests": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/successfulManifest"
      }
    },
    "failedManifests": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/failedManifest"
      }
    }
  },
  "definitions": {
    "successfulManifest": {
      "type": "object",
      "properties": {
        "manifestReference": {
          "type": "string"
        },
        "documentation": {
          "description": "Documentation that has been generated as part of the manifest request",
          "type": "array",
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/document-response+v1#"
          }
        },
        "manifestShipments": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "http://carrier-gateway.temando.com/schema/generic/booking+v1#"
          }
        }
      }
    },
    "failedManifest": {
      "type": "object",
      "required": [
        "reasons"
      ],
      "properties": {
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      }
    }
  }
}
