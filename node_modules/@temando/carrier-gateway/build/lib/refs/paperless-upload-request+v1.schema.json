{
  "id": "http://carrier-gateway.temando.com/schema/paperless-upload-request+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic paperless upload request schema",
  "type": "object",
  "allOf": [
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/credentials+v2#"
    },
    {
      "$ref": "#/definitions/paperlessUpload"
    }
  ],
  "definitions": {
    "paperlessUpload": {
      "type": "object",
      "required": [
        "documents"
      ],
      "properties": {
        "documents": {
          "description": "An array of documents for uploading",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/document"
          }
        }
      }
    },
    "document": {
      "type": "object",
      "allOf": [
        {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/document-response+v1#"
        }
      ],
      "required": [
        "encoding",
        "mimeType",
        "type"
      ]
    }
  }
}
