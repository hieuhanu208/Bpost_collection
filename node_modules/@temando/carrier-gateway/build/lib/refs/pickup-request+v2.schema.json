{
  "id": "http://carrier-gateway.temando.com/schema/pickup-request+v2#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic pickup request schema",
  "type": "object",
  "required": [
    "integrationId",
    "origin",
    "pickup",
    "pickupContact"
  ],
  "allOf": [
    { "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#" },
    { "$ref": "#/definitions/pickupRequest" }
  ],
  "definitions": {
    "pickupRequest": {
      "properties": {
        "integrationId": {
          "description": "The identifier of the integration to you want to communicate with",
          "type": "string"
        },
        "origin": { "$ref": "#/definitions/address" },
        "pickup": { "$ref": "#/definitions/pickup" },
        "pickupContact": { "$ref": "#/definitions/pickupContact" }
      }
    },
    "address": {
      "type": "object",
      "required": ["address", "countryCode", "postalCode"],
      "properties": {
        "address": {
          "description": "A street address and building number, newline delimited if required",
          "type": "string",
          "minLength": 2,
          "maxLength": 100
        },
        "countryCode": {
          "description": "An ISO 3166-1 alpha-2 compliant two-letter country code",
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "postalCode": {
          "type": "string"
        },
        "locality": {
          "type": "string",
          "description": "The city or township of this address"
        },
        "locationType": {
          "type": "string",
          "description": "Type of Location",
          "enum": [
            "B", "Business",
            "R", "Residence",
            "C", "Business/Residence"
          ]
        },
        "packageLocation": {
          "type": "string",
          "description": "Type of Location"
        }
      }
    },
    "pickup": {
      "type": "object",
      "required": ["readyDate","readyTime","closeTime"],
      "properties": {
        "readyDate": {
          "type": "string",
          "format": "date",
          "description": "The readyDate to pickup"
        },
        "readyTime": {
          "type": "string",
          "format": "time",
          "description": "The readyTime to pickup"
        },
        "closeTime": {
          "type": "string",
          "format": "time",
          "description": "The pickup closeTime"
        }
      }
    },
    "pickupContact": {
      "type": "object",
      "required": ["name", "phone"],
      "name": {
        "description": "Pickup contact name",
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "companyName": {
        "description": "Pickup contact company name",
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "phone": {
        "description": "Pickup phone number"
      },
      "phonExtension": {
        "description": "Pickup phone extension"
      }
    }
  }
}
