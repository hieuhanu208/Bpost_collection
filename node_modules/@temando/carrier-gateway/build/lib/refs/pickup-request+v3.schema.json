{
  "id": "http://carrier-gateway.temando.com/schema/pickup-request+v3#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic pickup request schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "pickup",
    "booking",
    "credentials"
  ],
  "allOf": [
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/credentials+v2#"
    }
  ],
  "properties": {
    "id": {
      "description": "A unique identifier for the schema of this request"
    },
    "integrationId": {
      "description": "The id of the integration you wish to talk to"
    },
    "createdAt": {
      "description": "The time the client sent this request to gateway"
    },
    "credentials": {
      "description": "Carrier credentials to make the request with"
    },
    "booking": {
      "description": "The booking one wishes to initiate a pickup for",
      "$ref": "http://carrier-gateway.temando.com/schema/generic/booking+v2#",
      "properties": {
        "shipment": {
          "required": ["origin", "destination"],
          "properties": {
            "origin": {
              "required": ["contact"]
            }
          }
        }
      }
    },
    "pickup": {
      "type": "object",
      "required": [
        "readyDateTime",
        "closeDateTime"
      ],
      "properties": {
        "readyDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time from which the booking pickup window open"
        },
        "closeDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the booking pickup window closes"
        },
        "location": {
          "description": "The pickup location at the address eg: front-desk",
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
