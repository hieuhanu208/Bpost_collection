{
  "id": "http://carrier-gateway.temando.com/schema/pickup-response+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic Pickup response schema",
  "type": "object",
  "required": ["integrationId", "successfulPickup", "failedPickup"],
  "properties": {
    "integrationId": {
      "description": "The identifier of the integration to you want to communicate with",
      "type": "string"
    },
    "successfulPickup": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/definitions/successfulPickup" }
    },
    "failedPickup": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/definitions/failedPickup" }
    }
  },
  "definitions": {
    "integrationId": {
      "description": "The identifier of the integration that you want to communicate with",
      "type": "string"
    },
    "successfulPickup": {
      "type": "object",
      "required": [
        "integrationServiceId", "PickupReference"
      ],
      "properties": {
        "integrationServiceId": {
          "description": "A consistent identifier within the integration that represents a unique carrier service",
          "type": "string"
        },
        "PickupReference": {
          "description": "A Pickup reference with the carrier",
          "type": "string"
        }
      }
    },
    "failedPickup": {
      "required": ["reason"],
      "integrationServiceId": {
        "description": "A consistent identifier within the integration that represents a unique carrier service",
        "type": "string"
      },
      "reason": { "type": "string" }
    }
  }
}
