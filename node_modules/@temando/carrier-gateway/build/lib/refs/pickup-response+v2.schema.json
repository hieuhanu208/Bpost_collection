{
  "id": "http://carrier-gateway.temando.com/schema/pickup-response+v2#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic Pickup response schema",
  "type": "object",
  "required": ["integrationId"],
  "properties": {
    "integrationId": {
      "description": "The identifier of the integration to you want to communicate with",
      "type": "string"
    },
    "successfulPickup": {
      "type": "object",
      "minItems": 0,
      "items": { "$ref": "#/definitions/successfulPickup" }
    },
    "failedPickup": {
      "type": "object",
      "minItems": 0,
      "items": { "$ref": "#/definitions/failedPickup" }
    }
  },
  "definitions": {
    "integrationId": {
      "description": "The identifier of the integration that you want to communicate with",
      "type": "string"
    },
    "successfulPickup": {
      "required": ["pickupNumber"],
      "properties": {
        "pickupNumber": {
          "description": "A Pickup number was returned by carrier when pickup called sucsessful.",
          "type": "string"
        }
      }
    },
    "failedPickup": {
      "required": ["reason"],
      "reason": { "type": "string" }
    }
  }
}
