{
  "id": "http://carrier-gateway.temando.com/schema/track-request+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic tracking request schema",
  "type": "object",
  "required": [
    "integrationId",
    "trackingReference"
  ],
  "allOf": [
    { "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#" },
    { "$ref": "#/definitions/trackingRequest" }
  ],
  "definitions": {
    "trackingRequest": {
      "properties": {
        "integrationId": {
          "description": "The identifier of the integration to you want to communicate with",
          "type": "string"
        },
        "trackingReference": {
          "type": "string",
          "description": "The reference to find tracking events for",
          "minLength": 1
        }
      }
    }
  }
}
