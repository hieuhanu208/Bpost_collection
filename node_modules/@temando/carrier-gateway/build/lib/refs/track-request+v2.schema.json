{
   "id":"http://carrier-gateway.temando.com/schema/track-request+v2#",
   "$schema":"http://json-schema.org/draft-04/schema#",
   "description":"The generic tracking request schema",
   "type":"object",
   "required":[
      "integrationId",
      "trackingReferences"
   ],
   "allOf":[
      {
         "$ref":"http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
      },
      {
         "$ref":"http://carrier-gateway.temando.com/schema/generic/credentials+v1#"
      },
      {
         "$ref":"#/definitions/trackingRequest"
      }
   ],
   "definitions":{
      "trackingRequest":{
         "properties":{
            "integrationId":{
               "description":"The identifier of the integration to you want to communicate with",
               "type":"string"
            },
            "trackingReferences":{
               "type":"array",
               "description":"The references array to find tracking events for",
               "minLength":1,
               "items":{
                  "type":"string"
               }
            }
         }
      }
   }
}