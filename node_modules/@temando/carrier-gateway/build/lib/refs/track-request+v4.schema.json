{
  "id": "http://carrier-gateway.temando.com/schema/track-request+v4#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The generic tracking request schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "trackingReferences",
    "configuration"
  ],
  "allOf": [
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/identifiable+v1#"
    },
    {
      "$ref": "http://carrier-gateway.temando.com/schema/generic/extensible+v1#"
    }
  ],
  "properties": {
    "configuration": {
      "required": [
        "client"
      ],
      "allOf": [
        {
          "$ref": "http://carrier-gateway.temando.com/schema/generic/configuration+v1#"
        }
      ]
    },
    "extensions": {
      "description": "Custom extensions to this schema"
    },
    "id": {
      "description": "A unique identifier for the schema of this request"
    },
    "integrationId": {
      "description": "The id of the integration you wish to talk to"
    },
    "createdAt": {
      "description": "The time the client sent this request to gateway"
    },
    "trackingReferences": {
      "type": "array",
      "items": {
        "description": "The tracking reference of a shipment to fetch updates for",
        "type": "string",
        "minLength": 1
      }
    }
  }
}
