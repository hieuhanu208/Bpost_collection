{
  "id": "https://app.temando.com/schemas/generic/form/controls/base-form-control+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Base form control upon which all other controls extend",
  "required": ["id", "type"],
  "properties": {
    "id": {
      "type": "string"
    },
    "ref": {
      "description": "JSON Pointer (RFC 6901). The path within the request schema which this control's value maps to",
      "type": "string",
      "pattern": "^#\/"
    },
    "title": {
      "$ref": "https://app.temando.com/schema/generic/message+v1#"
    },
    "helpText": {
      "$ref": "https://app.temando.com/schema/generic/message+v1#"
    },
    "visibility": {
      "$ref": "https://app.temando.com/schemas/generic/form/dependency+v1#"
    },
    "disabled": {
      "$ref": "https://app.temando.com/schemas/generic/form/dependency+v1#"
    },
    "defaultValue": {
      "$ref": "https://app.temando.com/schemas/generic/value+v1#"
    },
    "validation": {
      "type": "array",
      "items": {
        "$ref": "https://app.temando.com/schemas/generic/form/controls/validation-rule+v1#"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  }
}
