{
  "id": "https://app.temando.com/schemas/generic/form/controls/choice-form-control+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Choice form control e.g. standalone checkbox",
  "required": ["type"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["choice"]
    },
    "value": {
      "type": "string"
    },
    "uiMeta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "yesNoConfiguration": {
          "type": "boolean",
          "description": "Whether this control is a Yes/No Configuration (perhaps able to be toggled again later)."
        }
      }
    }
  }
}
