{
  "id": "https://app.temando.com/schemas/generic/form/controls/choices-form-control+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Choices form control, dropdown or list selection",
  "required": ["type"],
  "oneOf": [
    {
      "type": "object",
      "required": ["dataSource"],
      "properties": {
        "dataSource": {
          "$ref": "https://app.temando.com/schemas/generic/form/data-source+v1#"
        }
      }
    }, {
      "type": "object",
      "required": ["options"],
      "properties": {
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["title", "value"],
            "properties": {
              "title": { "$ref": "https://app.temando.com/schema/generic/message+v1#" },
              "value": {}
            }
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "uiMeta": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "sortOptions": {
              "type": "object",
              "additionalProperties": false,
              "required": ["by", "order"],
              "properties": {
                "by": {
                  "type": "string",
                  "enum": ["title"]
                },
                "order": {
                  "type": "string",
                  "enum": ["ASC"]
                }
              }
            }
          }
        }
      }
    }
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["dropdown", "multiChoice"]
    }
  }
}
