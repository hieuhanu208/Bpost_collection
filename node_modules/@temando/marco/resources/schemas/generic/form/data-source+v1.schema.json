{
  "id": "https://app.temando.com/schemas/generic/form/data-source+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["trigger", "httpRequest"],
  "additionalProperties": false,
  "properties": {
    "trigger": {
      "description": "Defines what is triggering data loading",
      "type": "object",
      "required": ["event"],
      "additionalProperties": false,
      "properties": {
        "event": {
          "type": "string",
          "enum": ["onload", "onchange"]
        },
        "controlId": {
          "description": "Id of the control that triggers the event/data load",
          "type": "string"
        }
      }
    },
    "httpRequest": {
      "$ref": "https://app.temando.com/schema/generic/http-request/http-request+v1#"
    },
    "responseRoot": {
      "description": "JSON Pointer (RFC 6901). The path within the response for what should be used as the data",
      "type": "string",
      "pattern": "^#\/"
    },
    "transforms": {
      "type": "array",
      "items": {
        "$ref": "https://app.temando.com/schemas/generic/transform/transform+v1#"
      },
      "minItems": 1
    }
  }
}