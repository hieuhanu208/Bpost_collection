{
  "id": "https://app.temando.com/schemas/generic/form/dependency+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "This control should be visible when the value matches",
      "type": "object",
      "required": ["controlId", "value"],
      "additionalProperties": false,
      "properties": {
        "controlId": {
          "#ref": "#/definitions/controlId"
        },
        "value": {
          "#ref": "#/definitions/value"
        }
      }
    },
    {
      "description": "This control should be visible when the value isn't one of the listed values",
      "type": "object",
      "required": ["controlId", "valueNotIn"],
      "additionalProperties": false,
      "properties": {
        "controlId": {
          "#ref": "#/definitions/controlId"
        },
        "valueNotIn": {
          "type": "array",
          "items": {
            "#ref": "#/definitions/value"
          },
          "uniqueItems": true,
          "minItems": 1
        }
      }
    }
  ],
  "definitions": {
    "controlId": {
      "description": "Control whose value should toggle a dependency (visibility or disabled) of this control",
      "type": "string"
    },
    "value": {
      "oneOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "integer" },
        { "type": "boolean" },
        { "type": "null"}
      ]
    }
  }
}