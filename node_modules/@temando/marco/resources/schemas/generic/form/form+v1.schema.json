{
  "id": "https://app.temando.com/schema/generic/form/form+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A resource action with field ordering, validation, etc.",
  "type": "object",
  "required": ["controlSets"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "$ref": "https://app.temando.com/schema/generic/message+v1#"
    },
    "controlSets": {
      "description": "Ordered form groups to render",
      "type": "array",
      "items": {
        "$ref": "https://app.temando.com/schema/generic/form/form-control-set+v1#"
      },
      "minItems": 1
    },
    "httpRequest": {
      "$ref": "https://app.temando.com/schema/generic/http-request/http-request+v1#"
    },
    "afterHttpRequests": {
      "type": "array",
      "items": {
        "$ref": "https://app.temando.com/schema/generic/http-request/http-request+v1#"
      },
      "minItems": 1
    }
  }
}
