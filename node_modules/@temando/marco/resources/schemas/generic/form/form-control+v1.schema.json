{
  "id": "https://app.temando.com/schema/generic/form/form-control+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Form control is element used within a form for data collection",
  "allOf": [{
    "$ref": "https://app.temando.com/schemas/generic/form/controls/base-form-control+v1#"
  }],
  "oneOf": [
    {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["textarea", "hidden"]
        }
      }
    },
    { "$ref": "https://app.temando.com/schemas/generic/form/controls/choice-form-control+v1#" },
    { "$ref": "https://app.temando.com/schemas/generic/form/controls/choices-form-control+v1#" },
    { "$ref": "https://app.temando.com/schemas/generic/form/controls/date-form-control+v1#" },
    { "$ref": "https://app.temando.com/schemas/generic/form/controls/datetime-form-control+v1#" },
    { "$ref": "https://app.temando.com/schemas/generic/form/controls/info-form-control+v1#" },
    { "$ref": "https://app.temando.com/schemas/generic/form/controls/number-form-control+v1#" },
    { "$ref": "https://app.temando.com/schemas/generic/form/controls/text-form-control+v1#" }
  ]
}
