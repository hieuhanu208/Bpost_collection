{
  "id": "https://app.temando.com/schema/generic/form/form-control-set+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Form group represents logical grouping of form controls as a list of ordered fields",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "controls"],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "$ref": "https://app.temando.com/schema/generic/message+v1#"
    },
    "description": {
      "$ref": "https://app.temando.com/schema/generic/message+v1#"
    },
    "visibility": {
      "$ref": "https://app.temando.com/schemas/generic/form/dependency+v1#"
    },
    "disabled": {
      "$ref": "https://app.temando.com/schemas/generic/form/dependency+v1#"
    },
    "controls": {
      "description": "Ordered list of form fields",
      "type": "array",
      "items": { "$ref": "https://app.temando.com/schema/generic/form/form-control+v1#" },
      "minItems": 1
    }
  }
}
