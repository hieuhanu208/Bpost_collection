 {
  "id": "https://app.temando.com/schemas/generic/form/validation-rules/length-rule+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["rule", "messages"],
  "properties": {
    "rule": {
      "type": "string",
      "enum": ["length"]
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/exactRule"
    },
    {
      "$ref": "#/definitions/maxRule"
    },
    {
      "$ref": "#/definitions/minRule"
    },
    {
      "$ref": "#/definitions/minMaxRule"
    }
  ],
  "definitions": {
    "minRule": {
      "allOf": [{
        "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/minimum-length-rule+v1#"
      }],
      "not": {
        "anyOf": [
          { "type": "object", "required": ["maximum"] },
          { "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/maximum-length-rule+v1#" },
          { "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/exact-length-rule+v1#" }
        ]
      }
    },
    "maxRule": {
      "allOf": [{
        "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/maximum-length-rule+v1#"
      }],
      "not": {
        "anyOf": [
          { "type": "object", "required": ["minimum"] },
          { "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/minimum-length-rule+v1#" },
          { "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/exact-length-rule+v1#" } 
        ]
      }
    },
    "minMaxRule": {
      "allOf": [{
        "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/minimum-length-rule+v1#"
      },
      {
        "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/maximum-length-rule+v1#"
      }],
      "not": {
        "anyOf": [
          { "type": "object", "required": ["exact"] },
          { "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/exact-length-rule+v1#" }
        ]
      }
    },
    "exactRule": {
      "allOf": [{
        "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/exact-length-rule+v1#"
      }],
      "not": {
        "anyOf": [
          { "type": "object", "required": ["minimum"] },
          { "type": "object", "required": ["maximum"] },
          { "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/minimum-length-rule+v1#" },
          { "$ref": "https://app.temando.com/schemas/generic/form/validation-rules/maximum-length-rule+v1#" }
        ]
      }
    }
  }
}