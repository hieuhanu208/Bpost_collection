{
  "id": "https://app.temando.com/schemas/generic/form/validation-rules/must-match-rule+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["rule", "matchControlId", "messages"],
  "additionalProperties": false,
  "properties": {
    "rule": {
      "type": "string",
      "enum": ["mustMatch"]
    },
    "matchControlId": {
      "description": "Control Id whose value must match this control's value",
      "type": "string"
    },
    "messages": { "$ref": "#/definitions/errorMessages" }
  },
  "definitions": {
    "errorMessages": {
      "type": "object",
      "required": ["notMatching"],
      "additionalProperties": false,
      "properties": {
        "notMatching": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        }
      }
    }
  }
}