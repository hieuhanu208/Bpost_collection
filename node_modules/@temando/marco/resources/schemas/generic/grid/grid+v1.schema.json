{
  "id": "https://app.temando.com/schemas/generic/grid/grid+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A data grid for display, selection and action",
  "type": "object",
  "required": [
    "id",
    "rows",
    "columns",
    "selectedValueRef"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "rows": {
      "$ref": "https://app.temando.com/schemas/generic/value+v1#"
    },
    "columns": {
      "type": "array",
      "items": {
        "$ref": "https://app.temando.com/schemas/generic/grid/grid-column+v1#"
      },
      "minItems": 1
    },
    "rowActions": {
      "type": "array",
      "items": {
        "$ref": "https://app.temando.com/schemas/generic/grid/grid-row-action+v1#"
      },
      "minItems": 1
    },
    "selectedValueRef": {
      "description": "JSON Pointer (RFC 6901). The path within the row data which is added to selection state when this row is selected.",
      "type": "string",
      "pattern": "^#\/"
    },
    "defaultSelection": {
      "type": "string",
      "enum": ["all"]
    }
  }
}