{
  "id": "https://app.temando.com/schemas/generic/grid/grid-column+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A data grid column",
  "type": "object",
  "required": [
    "title",
    "ref"
  ],
  "additionalProperties": false,
  "properties": {
    "title": {
      "$ref": "https://app.temando.com/schema/generic/message+v1#"
    },
    "ref": {
      "description": "JSON Pointer (RFC 6901). The path within the row data which is displayed in this column.",
      "type": "string",
      "pattern": "^#\/"
    },
    "transforms": {
      "type": "array",
      "items": {
        "$ref": "https://app.temando.com/schemas/generic/transform/transform+v1#"
      },
      "minItems": 1
    }
  }
}