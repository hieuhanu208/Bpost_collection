{
  "id": "https://app.temando.com/schemas/generic/grid/grid-row-action+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A data grid row action, for example, viewing a row",
  "type": "object",
  "oneOf": [
    {
      "$ref": "#/definitions/view"
    }
  ],
  "definitions": {
    "view": {
      "type": "object",
      "additionalProperties": false,
      "required": ["action", "url", "urlParams"],
      "properties": {
        "action": {
          "type": "string",
          "enum": ["view"]
        },
        "url": {
          "$ref": "https://app.temando.com/schemas/generic/value+v1#"
        },
        "urlParams": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["param", "ref"],
            "properties": {
              "param": {
                "description": "The URL param key which this value maps to",
                "type": "string"
              },
              "ref": {
                "description": "JSON Pointer (RFC 6901). The path within the row data which this value maps from",
                "type": "string",
                "pattern": "^#\/"
              }
            }
          },
          "minItems": 1
        }
      }
    }
  }
}