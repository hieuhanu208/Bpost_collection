{
  "id": "https://app.temando.com/schema/generic/http-request/http-request+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["url"],
  "properties": {
    "url": {
      "type": "string"
    },
    "method": {
      "type": "string",
      "enum": ["GET", "POST", "PATCH", "DELETE", "PUT"]
    },
    "requestData": {
      "type": "array",
      "items": {
        "oneOf": [{
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["stateRef"]
            },
            "ref": {
              "description": "JSON Pointer (RFC 6901). The path within the request schema which this data maps to",
              "type": "string",
              "pattern": "^#\/"
            },
            "stateRef": {
              "description": "JSON Pointer (RFC 6901). The path within state which this data maps from",
              "type": "string",
              "pattern": "^#\/"
            },
            "transforms": {
              "type": "array",
              "items": {
                "$ref": "https://app.temando.com/schemas/generic/transform/transform+v1#"
              },
              "minItems": 1
            }
          }
        }, {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["value"]
            },
            "ref": {
              "description": "JSON Pointer (RFC 6901). The path within the request schema which this data maps to",
              "type": "string",
              "pattern": "^#\/"
            },
            "value": {
              "description": "A static value"
            }
          }
        }]
      },
      "minItems": 1
    },
    "headers": {
      "type": "array",
      "items": {
        "oneOf": [{
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["stateRef"]
            },
            "header": {
              "description": "The header, e.g. Accept, Content-Type",
              "type": "string"
            },
            "stateRef": {
              "description": "JSON Pointer (RFC 6901). The path within state which this data maps from",
              "type": "string",
              "pattern": "^#\/"
            },
            "transforms": {
              "type": "array",
              "items": {
                "$ref": "https://app.temando.com/schemas/generic/transform/transform+v1#"
              },
              "minItems": 1
            }
          }
        }, {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["value"]
            },
            "header": {
              "description": "The header, e.g. Accept, Content-Type",
              "type": "string"
            },
            "value": {
              "description": "A static value for the header",
              "type": "string"
            }
          }
        }]
      },
      "minItems": 1
    },
    "urlParams": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["param", "stateRef"],
        "properties": {
          "param": {
            "description": "The URL param key which this data maps to",
            "type": "string"
          },
          "stateRef": {
            "description": "JSON Pointer (RFC 6901). The path within state which this data maps from",
            "type": "string",
            "pattern": "^#\/"
          }
        }
      },
      "minItems": 1
    }
  }
}
