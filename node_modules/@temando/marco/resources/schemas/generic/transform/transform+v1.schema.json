{
  "id": "https://app.temando.com/schemas/generic/transform/transform+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "type": "object",
      "required": ["type"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["formatAddress"]
        }
      }
    },
    {
      "type": "object",
      "required": ["type", "momentFormatString"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["formatDate"]
        },
        "momentFormatString": {
          "type": "string"
        }
      }
    },
    {
      "type": "object",
      "required": ["type"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["formatCurrency"]
        }
      }
    },
    {
      "type": "object",
      "required": ["type", "attribute"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["getAttribute"]
        },
        "attribute": {
          "type": "string",
          "enum": ["length"]
        }
      }
    },
    {
      "type": "object",
      "required": ["type", "ref"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["getValue"]
        },
        "ref": {
          "description": "JSON Pointer (RFC 6901). The path within the subject to access a value",
          "type": "string"
        }
      }
    },
    {
      "type": "object",
      "required": ["type", "format"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["buildString"]
        },
        "format": {
          "description": "The string with {placeholder} values which will be replaced with keys from the subject object",
          "type": "string"
        }
      }
    },
    {
      "type": "object",
      "required": ["type", "prefix"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["prefixString"]
        },
        "prefix": {
          "description": "The string to prefix the subject string with",
          "type": "string"
        }
      }
    },
    {
      "type": "object",
      "required": ["type", "transform"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["transformEach"]
        },
        "transform": {
          "$ref": "https://app.temando.com/schemas/generic/transform/transform+v1#"
        }
      }
    },
    {
      "type": "object",
      "required": ["type", "values"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["changeShape"]
        },
        "values": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["input", "output"],
            "additionalProperties": false,
            "properties": {
              "input": {
                "description": "JSON Pointer (RFC 6901). The path within the input to access a value",
                "type": "string"
              },
              "output": {
                "description": "JSON Pointer (RFC 6901). The path to set this value within the output object",
                "type": "string"
              }
            }
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    }
  ]
}
