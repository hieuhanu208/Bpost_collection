{
  "id": "https://app.temando.com/schema/generic/workflow/step+v1#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    { "$ref": "#/definitions/binaryChoice" },
    { "$ref": "#/definitions/choicesList" },
    { "$ref": "#/definitions/form" },
    { "$ref": "#/definitions/grid" },
    { "$ref": "#/definitions/notice" }
  ],
  "definitions": {
    "next": {
      "type": "object",
      "oneOf": [{
        "required": ["stepId"],
        "properties": {
          "label": {
            "$ref": "https://app.temando.com/schema/generic/message+v1#"
          },
          "stepId": {
            "type": "string"
          },
          "condition": {
            "$ref": "https://app.temando.com/schema/generic/workflow/condition+v1#"
          }
        }
      }, {
        "required": ["done"],
        "properties": {
          "label": {
            "$ref": "https://app.temando.com/schema/generic/message+v1#"
          },
          "done": {
            "type": "boolean",
            "enum": [true]
          },
          "condition": {
            "$ref": "https://app.temando.com/schema/generic/workflow/condition+v1#"
          }
        }
      }]
    },
    "binaryChoice": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "title", "type", "next"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "description": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "type": {
          "type": "string",
          "enum": ["binaryChoice"]
        },
        "next": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["label", "value"],
            "allOf": [{
              "properties": {
                "value": {
                  "type": "boolean"
                }
              }
            }, {
              "$ref": "#/definitions/next"
            }]
          }
        }
      }
    },
    "choicesList": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "description": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "type": {
          "type": "string",
          "enum": ["choicesList"]
        },
        "next": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/next"
          }
        }
      }
    },
    "form": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "title", "type", "form", "next"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "description": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "type": {
          "type": "string",
          "enum": ["form"]
        },
        "form": {
          "$ref": "https://app.temando.com/schema/generic/form/form+v1#"
        },
        "next": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/next"
          }
        }
      }
    },
    "grid": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "title", "type", "grid", "next"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "description": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "type": {
          "type": "string",
          "enum": ["grid"]
        },
        "grid": {
          "$ref": "https://app.temando.com/schemas/generic/grid/grid+v1#"
        },
        "next": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/next"
          }
        }
      }
    },
    "notice": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "title", "type", "notice", "next"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "type": {
          "type": "string",
          "enum": ["notice"]
        },
        "notice": {
          "$ref": "https://app.temando.com/schema/generic/message+v1#"
        },
        "next": {
          "type": "array",
          "minItems": 1,
          "additionalProperties": false,
          "items": {
            "$ref": "#/definitions/next"
          }
        }
      }
    }
  }
}
