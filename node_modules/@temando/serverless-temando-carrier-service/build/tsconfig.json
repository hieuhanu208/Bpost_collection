{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "noUnusedLocals": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": false,
    "lib": [
      "es2015",
      "es7",
      "esnext.asynciterable",
      "dom"
    ],
    "pretty": true
  }
}