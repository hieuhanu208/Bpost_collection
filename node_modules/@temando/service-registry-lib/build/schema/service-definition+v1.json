{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://service-registry.temando.com/schema/service-definition+v1#",
  "description": "The definition of a service, holds it's id and dependencies",
  "type": "object",
  "required": ["id", "kvs", "dependencies"],
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "description": {
      "type": "string"
    },
    "dependencies": {
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/id"
      },
      "minItems": 0
    },
    "kvs": {
      "default": [],
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/kvString"
          },
          {
            "$ref": "#/definitions/kvObject"
          }
        ]
      },
      "minItems": 0
    },
    "attributes": {
      "default": {},
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": [
            "number",
            "integer",
            "string",
            "boolean"
          ]
        }
      },
      "additionalProperties": false
    },
    "publicQueues": {
      "default": [],
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "url"
        ],
        "properties": {
          "id": {
            "$ref": "#/definitions/id"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "oneOf": [
              {
                "format": "uri"
              },
              {
                "pattern": "^(\\${).*(}$)"
              }
            ]
          }
        },
        "additionalProperties": false
      },
      "minItems": 0
    },
    "resources": {
      "default": [],
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "type", "output"],
        "properties": {
          "id": {
            "$ref": "#/definitions/id"
          },
          "description": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["aws:sns", "aws:sqs", "aws:kinesis"]
          },
          "output": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      },
      "minItems": 0
    }
  },
  "definitions": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 3
    },
    "kvString": {
      "type": "string",
      "pattern": "^[a-z0-9-/]+$"
    },
    "kvObject": {
      "type": "object",
      "required": [
        "key"
      ],
      "properties": {
        "key": {
          "$ref": "#/definitions/kvString"
        },
        "default": {
          "type": [
            "number",
            "integer",
            "string",
            "boolean"
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
