{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://service-registry.temando.com/schema/service-deployment+v1#",
  "description": "Describes a successful deployment of a service into a region",
  "type": "object",
  "required": ["region"],
  "properties": {
    "region": {
      "description": "The region of deployment",
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "at": {
      "description": "The datetime of when the deployment happened",
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "description": "The version of the service that was just deployed. Eg v0.1.6-alpha, or a2fd3..",
      "type": "string"
    },
    "endpoint": {
      "type": "string",
      "format": "uri"
    },
    "queues": {
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/queueItem"
      },
      "minItems": 0
    },
    "topics": {
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/topicItem"
      },
      "minItems": 0
    },
    "streams": {
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/streamItem"
      },
      "minItems": 0
    }
  },
  "definitions": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 3
    },
    "queueItem": {
      "type": "object",
      "required": [
        "id",
        "url"
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "topicItem": {
      "type": "object",
      "required": [
        "id",
        "arn"
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "arn": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "streamItem": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "name": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
