{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://service-registry.temando.com/schema/service-env+v1#",
  "type": "object",
  "required": ["targetService", "keyValues", "services"],
  "properties": {
    "targetService": {
      "type": "string"
    },
    "keyValues": {
      "default": [],
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "key",
          "value"
        ],
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[a-z0-9-/]+$"
          },
          "value": {
            "type": [
              "number",
              "integer",
              "string",
              "boolean",
              "array",
              "object"
            ]
          }
        }
      },
      "minItems": 0
    },
    "services": {
      "default": [],
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "currentRegion",
          "deployments"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "currentRegion": {
            "type": "string"
          },
          "deployments": {
            "default": [],
            "type": "array",
            "items": {
              "$ref": "http://service-registry.temando.com/schema/service-deployment+v1#"
            },
            "minItems": 1
          }
        }
      },
      "minItems": 0
    }
  }
}
